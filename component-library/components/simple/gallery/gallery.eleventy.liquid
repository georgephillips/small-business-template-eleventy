<div class="c-gallery">
    {% if env_bookshop_live %}
        {% if show_note %}
            {% bookshop "generic/notification" heading:"Gallery Tile Display" text:"All tiles will be visible when live editing, however on the live site it will display 3-6 initially with a load more button to load more tiles. <br> This note only will only show in live editing." %}
        {% endif %}
        <div class="c-gallery__tiles">
            {% for image in images %}
                <div class="c-gallery__tiles__tile">{% bookshop "generic/image" bind:image %}</div>
            {% endfor %}
        </div>
    {% else %}
        <div class="c-gallery__tiles">
            {% for image in images %}
                <div class="c-gallery__tiles__tile c-gallery__tiles__tile--hidden">{% bookshop "generic/image" bind:image %}</div>
            {% endfor %}
        </div>

        <div class="c-gallery__button">{% bookshop "generic/button" text:"Load More" variant:"primary" arrow:"down" %}</div>
    {% endif %}
</div>