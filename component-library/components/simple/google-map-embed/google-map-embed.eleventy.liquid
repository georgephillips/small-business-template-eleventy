{% assign_local c = "c-google-map-embed" %}

{% if env_bookshop_live %}

<div class="{{c}} {{c}}--live-editing" style="--background-image: url('/assets/images/map-placeholder.webp')">
    <div class="{{c}}--live-editing__message">
        <p>This is a placeholder map. The Google Map will not render in live editing.</p>
        <div class="{{c}}--live-editing__message__warning">
            {% bookshop "generic/hero-icon" hero_icon_name:'outline/exclamation-triangle' color:'#1b1b1d' icon_size:'small' %} 
            <p>Remember to add your Google Maps API key in data/site</p>
        </div>
    </div>
</div>

{% elsif site.google_maps_api_key %}

    <div class="{{c}}" 
        id="map"
        maplat={{ latitude }}
        maplong={{ longitude }}
        mapzoom={{ zoom_level }}>
    </div>

{% else %}

    <div class="{{c}} {{c}}--no-key" style="--background-image: url('/assets/images/map-placeholder.webp')">
        <div class="{{c}}--no-key__message">
            <div class="{{c}}--no-key__message__warning">
                {% bookshop "generic/hero-icon" hero_icon_name:'outline/exclamation-triangle' color:'#1b1b1d' icon_size:'small' %} 
                <p>A Google Maps API key needs to be added in data/site</p>
            </div>
        </div>
    </div>

{% endif %}